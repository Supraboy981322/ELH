        <yel>System</yel><dar>.</dar><gra>out</gra><dar>.</dar><blu>println</blu><dar>(</dar><gre>"&lt;p&gt;"</gre><dar>);</dar>
        <pur>for</pur> <dar>(</dar><pur>int</pur> num <gra>=</gra> <ora>100</ora><dar>,</dar> i <gra>=</gra> <ora>1</ora><dar>;</dar> num <gra><=</gra> 1000<dar>;</dar> num<gra>++</gra><dar>) {</dar>
            <pur>if</pur> <dar>(</dar>num <gra>%</gra> <ora>5</ora> <gra>==</gra> <ora>0</ora> <gra>&&</gra> num <gra>%</gra> <ora>6</ora> <gra>==</gra> <ora>0</ora><dar>) {</dar>
                <yel>String</yel> whiteSpace <gra>=</gra> <dar>(</dar>i <gra>%</gra> <ora>10</ora> <gra>==</gra> <ora>0</ora><dar>)</dar> <gra>?</gra> <gre>"&lt;/p&gt;&lt;p&gt;"</gre> <gra>:</gra> <gre>"  "</gre><dar>;</dar>
